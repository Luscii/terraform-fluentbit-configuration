{
  "inputs": [
    {
      "type": "promptString",
      "id": "linear-auth",
      "description": "Linear Authorization header (bijv: Bearer <token>)",
      "password": true
    }
  ],
  "servers": {
    "linear": {
      "type": "http",
      "url": "https://mcp.linear.app/mcp",
      "headers": {
        "Authorization": "${input:linear-auth}"
      }
    }
  }
}
